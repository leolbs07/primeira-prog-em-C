#include <stdio.h>

int main( ) {
int contador = 0;
char continua = 's';

while (continua == 's') { 
	printf("Repentindo .... \n");
		contador = contador + 1;

printf("Tecle 's' se deseja continuar\n");
scanf("%c",&continua);
setbuf(stdin, 0);

if (contador == 0)
	printf("O bloco NAO foi repetido.");
else
	printf("O bloco foi repetido %d vezes", contador);

return 0;

}
}
